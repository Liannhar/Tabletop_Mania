<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/dice_card_mini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:cardBackgroundColor="@color/primary_color_app"
        app:cardCornerRadius="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/hourglass_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hourglass1"
            />
        <TextView
            android:id="@+id/hourglass_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="@string/h_card"
            android:textAlignment="center"
            android:textColor="@color/white"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/dice_card_delete"
        android:visibility="invisible"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#FF0000"
        app:layout_constraintEnd_toEndOf="@id/dice_card_mini"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_horizontal_rule_24"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>