<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#80000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/set_time_back"
        android:id="@+id/set_time_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="number"
        android:textColor="@color/white"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:textSize="44sp"
        android:id="@+id/minuets"
        app:layout_constraintTop_toTopOf="@+id/set_time_back"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="@+id/set_time_back"
        android:layout_marginTop="20dp"/>

    <EditText
        android:inputType="number"
        android:textColor="@color/white"
        android:layout_width="56dp"
        android:layout_height="44dp"
        android:textSize="44sp"
        android:id="@+id/seconds"
        app:layout_constraintTop_toTopOf="@+id/set_time_back"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/set_time_back" />

    <androidx.constraintlayout.widget.Guideline
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_begin="205dp"
        android:id="@+id/guideline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text=":"
        android:id="@+id/textView"
        app:layout_constraintTop_toTopOf="@+id/minuets"
        app:layout_constraintStart_toEndOf="@+id/minuets"
        app:layout_constraintEnd_toStartOf="@+id/seconds"
        app:layout_constraintBottom_toBottomOf="@+id/minuets" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_time_button"
        app:layout_constraintBottom_toBottomOf="@+id/set_time_back"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/set_time_back"
        app:layout_constraintEnd_toEndOf="@+id/set_time_back" />

</androidx.constraintlayout.widget.ConstraintLayout>