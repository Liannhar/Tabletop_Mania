<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/timer_back"
        android:id="@+id/timer_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:inputType="number"
        android:textColor="@color/white"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:textSize="40sp"
        android:id="@+id/minuets"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="@+id/timer_back"
        app:layout_constraintTop_toTopOf="@+id/timer_back"
        app:layout_constraintBottom_toBottomOf="@+id/timer_back" />

    <EditText
        android:inputType="number"
        android:textColor="@color/white"
        android:layout_width="80dp"
        android:layout_height="64dp"
        android:textSize="40sp"
        android:id="@+id/seconds"
        android:textAlignment="center"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/timer_back"
        app:layout_constraintTop_toTopOf="@+id/timer_back"
        app:layout_constraintStart_toEndOf="@+id/textView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:text=":"
        android:layout_marginStart="8dp"
        android:id="@+id/textView"

        app:layout_constraintStart_toEndOf="@+id/minuets"
        app:layout_constraintBottom_toBottomOf="@+id/minuets"
        app:layout_constraintTop_toTopOf="@+id/minuets" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/set_time_button"
        app:layout_constraintBottom_toBottomOf="@+id/timer_back"
        app:layout_constraintEnd_toEndOf="@+id/timer_back"
        app:layout_constraintStart_toEndOf="@+id/seconds"
        app:layout_constraintTop_toTopOf="@+id/timer_back" />

</androidx.constraintlayout.widget.ConstraintLayout>