<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color_app"
    tools:context=".presentationlayer.fragments.DiceFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/dice_fragment_cv_1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dice_fragment_spinner1"
        app:layout_constraintBottom_toTopOf="@id/dice_fragment_cv_2"
        app:flow_verticalBias="0.5"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/third_color_app">
        <TextView
            android:id="@+id/dice_fragment_cv_1_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Выберите тип кубика: "
            android:textAlignment="center"
            android:textSize="28dp"/>
    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/dice_fragment_spinner1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dice_fragment_spinner2"
        app:layout_constraintStart_toEndOf="@id/dice_fragment_cv_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_verticalBias="0.5"
        android:background="@color/third_color_app"
        android:backgroundTint="@color/third_color_app"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/dice_fragment_cv_2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/dice_fragment_cv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dice_fragment_spinner2"
        app:layout_constraintBottom_toTopOf="@id/dice_fragment_button"
        app:flow_verticalBias="0.5"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/third_color_app">
        <TextView
            android:id="@+id/dice_fragment_cv_2_text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Сколько кубов кидаем: "
            android:textAlignment="center"
            android:textSize="28dp"/>
    </androidx.cardview.widget.CardView>

    <Spinner
        android:id="@+id/dice_fragment_spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dice_fragment_spinner1"
        app:layout_constraintBottom_toTopOf="@id/dice_fragment_button"
        app:layout_constraintStart_toEndOf="@id/dice_fragment_cv_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:flow_verticalBias="0.5"
        android:background="@color/third_color_app"
        android:backgroundTint="@color/third_color_app"
        />

    <Button
        android:id="@+id/dice_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dice_fragment_cv_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/third_color_app"
        android:text="Бросить"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>