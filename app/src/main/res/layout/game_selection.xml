<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color">


    <FrameLayout
android:layout_marginTop="8dp"
            android:id="@+id/recycler_host"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/my_games_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/my_games_back"
            android:id="@+id/my_games_back"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:text="@string/my_games_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/my_games"
            app:layout_constraintStart_toStartOf="@+id/my_games_back"
            app:layout_constraintEnd_toEndOf="@+id/my_games_back"
            app:layout_constraintBottom_toBottomOf="@+id/my_games_back"
            app:layout_constraintTop_toTopOf="@+id/my_games_back"
            android:textSize="28sp" />



    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragmentContainerView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout="@layout/fragment_navbar" />


</androidx.constraintlayout.widget.ConstraintLayout>